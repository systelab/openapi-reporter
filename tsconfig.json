{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src/",
    "paths": {
      "environments/*": ["environments/*"],
      "@common/*": ["app/common/*"],
      "@components": ["app/components/index.ts"],
      "@features/*": ["app/features/*"],
      "@jama/*": ["app/jama/*"],
      "@model": ["app/model/index.ts"],
      "@services/*": ["app/service/index.ts"]
    },
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
